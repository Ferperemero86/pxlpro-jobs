{% extends 'layouts/furniture.njk' %} {% block content %}

<div class="hero--first grid--flex">
  <img
    src="public/images/hero.png"
    class="hero--first__img"
    alt="A lady using a laptop in the office"
  />

  <div class="hero--first__content">
    <h1 class="heading">{{ heroMessage }}</h1>
    <p class="text">
      Hundreds of new career opportunities each day. Find your perfect job.
    </p>
  </div>
</div>

<!-- Search Form -->
<div class="search-form--Home">{% include 'includes/search-form.njk' %}</div>

<!-- Job links -->
<div class="job-links padding-x margin-y">
  <div class="job-links__sector">
    <div class="header">
      <h3 class="heading">Browse jobs by sector</h3>
      <a class="link" href="#">View all</a>
    </div>
    <div class="jobs">
      <div class="column">
        <ul class="jobs-list">
          {% for jobSector in jobSectors %} {% if (loop.index <= 8) %}
          <li class="jobs-list__element">
            <span class="title">{{ jobSector.title }}</span>
            <span class="quantity">{{ jobSector.quantity }}</span>
          </li>
          {% endif %} {% endfor %}
        </ul>
      </div>
      <div class="column">
        <ul class="jobs-list">
          {% for jobSector in jobSectors %} {% if (loop.index >= 7) %}
          <li class="jobs-list__element">
            <span class="title">{{ jobSector.title }}</span>
            <span class="quantity">{{ jobSector.quantity }}</span>
          </li>
          {% endif %} {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <div class="job-links__featured padding-y">
    <div class="header">
      <h3 class="heading">Featured jobs</h3>
      <a class="link" href="#">View all</a>
    </div>
    <div class="jobs-list">
      {% for job in featuredJobs %}
      <div class="jobs-list__job">
        <img src="public/images/_jobs/{{ job.img }}" class="img" />
        <div class="description">
          <p class="description__title">{{ job.title }}</p>
          <p class="description__location">{{ job.location }}</p>
          <p class="description__salary">{{ job.salary }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

<!-- Features -->
{% include "includes/features.njk" %}

<!-- Featured Employers -->
{%include "includes/featured-employers.njk" %}

<!-- Careers Advice -->
{%include "includes/careers-advice.njk" %}

<!-- About -->
{% include "includes/about.njk" %}

<!-- End block -->
{% endblock %}
